@model CMCS_Prototype.Models.Claim
@using Microsoft.AspNetCore.Identity
@using System.Globalization

@{
    ViewData["Title"] = $"Claim Details: {Model.ClaimNumber}";
    // Use a CultureInfo for currency formatting (assuming Rands for consistency)
    var currencyCulture = new CultureInfo("en-ZA");

    // Helper to get the correct status badge class
    var statusClass = Model.Status switch
    {
        "Pending" => "bg-warning text-dark",
        "Policy Review" => "bg-info text-dark",
        "Coordinator Approved" => "bg-primary",
        "Approved" => "bg-success",
        "Rejected" => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="container py-4">
    <h1 class="text-primary mb-3">Claim Details: @Model.ClaimNumber</h1>

    @* ========================================================================= *@
    @* HIERARCHY LEVEL 2/3: COORDINATOR SPECIFIC REVIEW TOOLS *@
    @* This block only renders for the Coordinator role to assist in their decision. *@
    @* ========================================================================= *@
    @if (User.IsInRole("Coordinator"))
    {
        @* --- Automated Policy Verification Display --- *@
        @if (ViewBag.PolicyViolations != null && ((List<string>)ViewBag.PolicyViolations).Any())
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4 shadow" role="alert">
                <h4 class="alert-heading"><i class="bi bi-x-octagon-fill"></i> Policy Violation Detected!</h4>
                <p>This claim has been flagged due to the following policy violation(s). Review carefully before proceeding.</p>
                <hr>
                <ul class="list-unstyled mb-0">
                    @foreach (var violation in (List<string>)ViewBag.PolicyViolations)
                    {
                        <li><i class="bi bi-exclamation-triangle-fill"></i> **@violation**</li>
                    }
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (ViewBag.IsPolicyCompliant != null && (bool)ViewBag.IsPolicyCompliant == true)
        {
            <div class="alert alert-success mb-4 shadow" role="alert">
                <h4 class="alert-heading"><i class="bi bi-check-circle-fill"></i> Policy Compliant</h4>
                <p class="mb-0">Automated verification passed. No policy violations were detected.</p>
            </div>
        }
    }


    @* ========================================================================= *@
    @* HIERARCHY LEVEL 1: CLAIM SUMMARY (Visible to ALL roles) *@
    @* ========================================================================= *@
    <div class="card shadow mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Claim Summary</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Claim Number</dt>
                <dd class="col-sm-9 fw-bold">@Model.ClaimNumber</dd>

                <dt class="col-sm-3">Submitted By</dt>
                <dd class="col-sm-9">@Model.Lecturer.Name (@Model.Lecturer.ContractorNumber)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @statusClass">
                        @Model.Status
                    </span>
                </dd>

                @* --- Rejection Reason Display (Important Audit Trail for ALL) --- *@
                @if (Model.Status == "Rejected" && !string.IsNullOrEmpty(Model.RejectionReason))
                {
                    <dt class="col-sm-3 text-danger">Rejection Reason</dt>
                    <dd class="col-sm-9 text-danger fw-bold">
                        <div class="alert alert-danger p-2 mb-0 mt-2">@Model.RejectionReason</div>
                    </dd>
                }

                <dt class="col-sm-3">Total Amount Claimed</dt>
                <dd class="col-sm-9 fw-bold text-success h5">@Model.TotalAmount.ToString("C", currencyCulture)</dd>

                <dt class="col-sm-3">Date Submitted</dt>
                <dd class="col-sm-9">@Model.DateSubmitted.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <hr class="my-4" />

    @* ========================================================================= *@
    @* HIERARCHY LEVEL 1: LINE ITEMS (Visible to ALL roles) *@
    @* ========================================================================= *@
    <h2>Activity Breakdown</h2>
    @if (Model.ClaimLineItems != null && Model.ClaimLineItems.Any())
    {
        <div class="table-responsive mb-4 shadow-sm">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 15%;">Date</th>
                        <th style="width: 10%;">Hours</th>
                        <th>Activity Description</th>
                        <th style="width: 15%;">Rate Used</th>
                        <th style="width: 15%;" class="text-end">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ClaimLineItems.OrderBy(li => li.DateOfActivity))
                    {
                        <tr>
                            <td>@item.DateOfActivity.ToShortDateString()</td>
                            <td>@item.Hours.ToString("0.00")</td>
                            <td>@item.ActivityDescription</td>
                            <td>@item.RatePerHour.ToString("C", currencyCulture)</td>
                            <td class="text-end">@item.TotalAmount.ToString("C", currencyCulture)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No line item activities were found for this claim.</p>
    }

    <hr class="my-4" />

    @* ========================================================================= *@
    @* HIERARCHY LEVEL 1: SUPPORTING DOCUMENTS (Visible to ALL roles) *@
    @* ========================================================================= *@
    <h2>Supporting Documents</h2>
    @if (Model.SupportingDocuments != null && Model.SupportingDocuments.Any())
    {
        <ul class="list-group mb-4 shadow-sm">
            @foreach (var doc in Model.SupportingDocuments)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <i class="bi bi-file-earmark-text me-2"></i> <span>@doc.FileName</span>
                    @* NOTE: Assuming doc.FilePath is a direct URL or a route to a download action *@
                    <a href="@doc.FilePath" target="_blank" class="btn btn-sm btn-outline-info">
                        <i class="bi bi-download"></i> Download/View
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No supporting documents uploaded.</p>
    }

    @* ========================================================================= *@
    @* HIERARCHY LEVEL 2: COORDINATOR ACTIONS (Only for Pending or Policy Review) *@
    @* ========================================================================= *@
    @if (User.IsInRole("Coordinator") && (Model.Status == "Pending" || Model.Status == "Policy Review"))
    {
        <div class="card bg-warning bg-opacity-10 border-warning shadow-lg mt-5 p-4">
            <h4 class="text-warning-emphasis"><i class="bi bi-person-fill-gear"></i> Coordinator Review Actions</h4>
            <p class="text-muted">Once approved, the claim will be escalated to the Manager for final sign-off.</p>
            <div class="d-flex gap-3">
                @* 1. APPROVE ACTION BUTTON (Escalates to Manager) *@
                <form asp-controller="Coordinator" asp-action="Approve" method="post" onsubmit="return confirm('Confirm approval and escalation to Manager?');">
                    <input type="hidden" name="id" value="@Model.ClaimID" />
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle-fill"></i> Approve (Escalate)
                    </button>
                </form>

                @* 2. REJECT ACTION BUTTON (Opens Modal) *@
                <button type="button" class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#rejectModal">
                    <i class="bi bi-x-octagon-fill"></i> Reject Claim
                </button>
            </div>
        </div>
    }

    @* ========================================================================= *@
    @* HIERARCHY LEVEL 3: MANAGER ACTIONS (Only for Coordinator Approved) *@
    @* ========================================================================= *@
    @if (User.IsInRole("Manager") && Model.Status == "Coordinator Approved")
    {
        <div class="card bg-success bg-opacity-10 border-success shadow-lg mt-5 p-4">
            <h4 class="text-success-emphasis"><i class="bi bi-briefcase-fill"></i> Manager Final Approval</h4>
            <p class="text-muted">Final approval authorizes payment processing for this claim.</p>
            <div class="d-flex gap-3">
                @* 1. FINAL APPROVE ACTION BUTTON *@
                <form asp-controller="Manager" asp-action="FinalApprove" method="post" onsubmit="return confirm('Confirm final approval? This action cannot be reversed.');">
                    <input type="hidden" name="id" value="@Model.ClaimID" />
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle-fill"></i> Final Approve
                    </button>
                </form>

                @* NOTE: Manager should also have a way to reject, perhaps opening the same modal or a separate one. *@
            </div>
        </div>
    }

    <div class="mt-4">
        @* All roles should have a simple way to go back to their dashboard *@
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

</div>


@* ---------------------------------------------------------------------------------- *@
@* REJECTION MODAL (Used by Coordinator or Manager for rejection reason) *@
@* ---------------------------------------------------------------------------------- *@
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @* The form action will need to be decided in the controller (e.g., Coordinator/Reject or Manager/Reject) *@
            <form asp-controller="Coordinator" asp-action="Reject" method="post">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="rejectModalLabel">Reject Claim: @Model.ClaimNumber</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.ClaimID" />
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Reason for Rejection (Required)</label>
                        <textarea id="rejectionReason" name="rejectionReason" class="form-control" rows="4" required placeholder="State the clear reason for rejecting the claim."></textarea>
                    </div>
                    <p class="text-danger small"><i class="bi bi-exclamation-triangle-fill"></i> This action is final and the Lecturer will be immediately notified.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>